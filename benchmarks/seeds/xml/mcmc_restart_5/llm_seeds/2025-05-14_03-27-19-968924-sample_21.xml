<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE notes [
  <!ELEMENT notes (note+)>
  <!ATTLIST note type (INFO|WARNING|ERROR) #REQUIRED>
  <!ENTITY author "S" >
  <!ENTITY % genEntities "<" >
  <!NOTATION bookSystem SYSTEM "J">
