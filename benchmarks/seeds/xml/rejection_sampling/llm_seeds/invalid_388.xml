<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE books [
  <!ELEMENT books (book+)>
  <!ELEMENT book (title,author,year,price,description,keywords)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ELEMENT price (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT keywords (#PCDATA)>
  <!ELEMENT keyword (#PCDATA)>
  <!ATTLIST keyword type CDATA #REQUIRED>
]>
<books>
  <book>
    <title>Harry Potter</title>
    <author>J.K. Rowling</author>
    <year>1997</year>
    <price>10.99</price>
    <description>This is a book.</description>
    <keywords>
      <keyword type="genre">Fantasy</keyword>
      <keyword type="author">J.K. Rowling</keyword>
      <keyword type="year">1997</keyword>
    </keywords>
  </book>
  <book>
    <title>The Lord of the Rings</title>
    <author>J.R.R. Tolkien</author>
    <year>1954</year>
    <price>12.99</price>
    <description>This is another book.</description>
    <keywords>
      <keyword type="genre">Fantasy</keyword>
      <keyword type="author">J.R.R. Tolkien</keyword>
      <keyword type="year">1954</keyword>
    </keywords>
  </book>
</books>