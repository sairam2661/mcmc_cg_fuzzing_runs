<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (title,author,editor,section*)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT editor (#PCDATA)>
  <!ELEMENT section (title,para+,footnote*)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT para (#PCDATA)>
  <!ELEMENT footnote (#PCDATA)>
]>
<book>
  <title>Sample Book</title>
  <author>John Doe</author>
  <editor>Jane Smith</editor>
  <section>
    <title>Introduction</title>
    <para>This is a sample paragraph.</para>
    <footnote>This is a footnote.</footnote>
  </section>
  <section>
    <title>Chapter 1</title>
    <para>This is another sample paragraph.</para>
    <footnote>This is another footnote.</footnote>
  </section>
</book>