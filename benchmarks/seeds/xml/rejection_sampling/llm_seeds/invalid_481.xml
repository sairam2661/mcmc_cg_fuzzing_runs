<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (title, author, publisher, year, (book|chapter)*, (note|bibliography)*)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT publisher (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ELEMENT book (#PCDATA)>
  <!ELEMENT chapter (#PCDATA)>
  <!ELEMENT note (#PCDATA)>
  <!ELEMENT bibliography (#PCDATA)>
  <!ELEMENT chapter (title, content)>
  <!ELEMENT content (#PCDATA)>
  <!ELEMENT note (title, content)>
  <!ELEMENT bibliography (title, content)>
]>
<book>
  <title>My Book</title>
  <author>Me</author>
  <publisher>Me</publisher>
  <year>2023</year>
  <book>Chapter 1</book>
  <note>
    <title>Important Note</title>
    <content>This is an important note.</content>
  </note>
  <bibliography>
    <title>Bibliography</title>
    <content>This is the bibliography.</content>
  </bibliography>
  <chapter>
    <title>Chapter 1</title>
    <content>This is the content of chapter 1.</content>
  </chapter>
  <chapter>
    <title>Chapter 2</title>
    <content>This is the content of chapter 2.</content>
  </chapter>
</book>