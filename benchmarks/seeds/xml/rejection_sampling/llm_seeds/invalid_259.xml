<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE catalog [
<!ELEMENT catalog (book+)>
<!ELEMENT book (author, title, price)>
<!ELEMENT author (#PCDATA)>
<!ELEMENT title (#PCDATA)>
<!ELEMENT price (#PCDATA)>
<!ATTLIST book id CDATA #REQUIRED>
<!ATTLIST author name CDATA #REQUIRED>
<!ATTLIST title type CDATA #IMPLIED>
<!ATTLIST title language CDATA #IMPLIED>
<!ENTITY author "John Doe">
<!ENTITY title "The Adventures of Sherlock Holmes">
<!ENTITY price "15.99">
<!ENTITY id "book1">
<!ENTITY name "John Doe">
<!ENTITY type "Fiction">
<!ENTITY language "English">
]>
<catalog>
  <book id="book1">
    <author name="John Doe"/>
    <title type="Fiction" language="English">The Adventures of Sherlock Holmes</title>
    <price>15.99</price>
  </book>
</catalog>