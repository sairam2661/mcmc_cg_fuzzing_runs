<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document [
  <!ELEMENT document (title,description,author,sections)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT author (name,email)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT email (#PCDATA)>
  <!ELEMENT sections (section+,)>
  <!ELEMENT section (title,description,content)>
]>
<document>
  <title>Example Document</title>
  <description>This is a sample document.</description>
  <author>
    <name>John Doe</name>
    <email>johndoe@example.com</email>
  </author>
  <sections>
    <section>
      <title>Section 1</title>
      <description>This is the first section.</description>
      <content>This is the content of section 1.</content>
    </section>
    <section>
      <title>Section 2</title>
      <description>This is the second section.</description>
      <content>This is the content of section 2.</content>
    </section>
  </sections>
</document>