<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book [
  <!ELEMENT book (title, author, chapter+)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT author (#PCDATA)>
  <!ELEMENT chapter (#PCDATA)>
  <!ELEMENT note (#PCDATA) | (image, link)>
  <!ELEMENT image (#PCDATA)>
  <!ELEMENT link (#PCDATA)>
  <!ATTLIST note
    id ID #REQUIRED
    type CDATA #IMPLIED
    lang CDATA #IMPLIED
  >
]>
<book>
  <title>The Great Gatsby</title>
  <author>F. Scott Fitzgerald</author>
  <chapter>Chapter 1</chapter>
  <chapter>Chapter 2</chapter>
  <chapter>Chapter 3</chapter>
  <note id="n1" type="summary">This is a summary of the book.</note>
  <note id="n2" lang="en">This is another note.</note>
  <note id="n3" type="image"><image>image1.jpg</image></note>
  <note id="n4" type="link"><link>https://www.example.com</link></note>
</book>