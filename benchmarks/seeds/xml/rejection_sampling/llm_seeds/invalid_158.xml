<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE doc [
<!ELEMENT doc (title,section*,footer)>
<!ELEMENT title (#PCDATA)>
<!ELEMENT section (#PCDATA)>
<!ELEMENT footer (#PCDATA)>
<!ATTLIST section
  id CDATA #REQUIRED
  type (chapter|appendix) #REQUIRED
>
<!ATTLIST doc
  lang CDATA #IMPLIED
  author CDATA #IMPLIED
>
]>
<doc lang="en">
<title>My Book</title>
<section id="s1" type="chapter">Chapter 1</section>
<section id="s2" type="chapter">Chapter 2</section>
<section id="s3" type="appendix">Appendix</section>
<footer>Page 1</footer>
</doc>