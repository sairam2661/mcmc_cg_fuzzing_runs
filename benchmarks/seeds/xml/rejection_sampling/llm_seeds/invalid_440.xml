<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE book SYSTEM "book.dtd">
<!ELEMENT book (title, author, publication-date, chapter*)>
<!ELEMENT chapter (title, content)>
<!ELEMENT title (#PCDATA)>
<!ELEMENT author (#PCDATA)>
<!ELEMENT publication-date (#PCDATA)>
<!ELEMENT content (#PCDATA)>
<!ATTLIST chapter id CDATA #REQUIRED>
<!ATTLIST chapter page CDATA #IMPLIED>
<book>
  <title>My Book</title>
  <author>John Doe</author>
  <publication-date>2022-01-01</publication-date>
  <chapter id="c1" page="1">
    <title>Chapter 1</title>
    <content>This is the content of chapter 1.</content>
  </chapter>
  <chapter id="c2">
    <title>Chapter 2</title>
    <content>This is the content of chapter 2.</content>
  </chapter>
  <chapter id="c3" page="3">
    <title>Chapter 3</title>
    <content>This is the content of chapter 3.</content>
  </chapter>
</book>