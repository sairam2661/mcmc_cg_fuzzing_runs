set testdir [file dirname $argv0]
source $testdir/tester.tcl

set testprefix unicode_test

set ::timeout 60000
do_setup unicode_test

proc unicode_test_func {args} {
  set result {}
  foreach arg $args {
    append result $arg
  }
  return $result
}

execsql {
  PRAGMA encoding = 'UTF-8'  
}

