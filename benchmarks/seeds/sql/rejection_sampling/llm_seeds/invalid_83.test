set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix sync

proc sync_proc {} {
  global syncargs
  lappend syncargs
  expr {[llength $syncargs] <= 2}
}

set sqlite_version [sqlite3 -version]

do_test sync-1.1 {
  execsql {
    CREATE TABLE a(x);
    INSERT INTO a VALUES(1),(2),(3);
  }
  execsql {SELECT count(*) FROM a}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=WAL}
} {0 {}}

do_test sync-1.2 {
  execsql {
    CREATE TABLE b(x);
    INSERT INTO b VALUES(4),(5),(6);
  }
  execsql {SELECT count(*) FROM b}
} {3}

ifcapable {fts5} {
  do_test sync-1.3 {
    execsql {
      CREATE VIRTUAL TABLE c USING fts5(x);
      INSERT INTO c VALUES('hello world');
      SELECT count(*) FROM c
    }
  } {1}
}

finish_test