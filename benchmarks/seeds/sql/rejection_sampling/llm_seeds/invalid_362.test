set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix sync
set sqlite_options [sqlite_options]

proc sync_proc {} {
  global syncargs
  lappend syncargs
  expr {[llength $syncargs] <= 2}
}

do_test sync-1.1 {
  execsql {
    CREATE TABLE a(x);
    INSERT INTO a VALUES(1),(2),(3);
  }
  execsql {SELECT count(*) FROM a}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=WAL}
} {0 {}}

if {![sqlite_options WAL]} {
  set sqlite_options [sqlite_options -journal_mode=WAL]
}

do_test sync-1.2 {
  execsql {
    CREATE TABLE b(y);
    INSERT INTO b VALUES(4),(5),(6);
  }
  execsql {SELECT count(*) FROM b}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=DELETE}
} {0 {}}

if {![sqlite_options journal_mode=DELETE]} {
  set sqlite_options [sqlite_options -journal_mode=DELETE]
}

do_test sync-1.3 {
  execsql {
    CREATE TABLE c(z);
    INSERT INTO c VALUES(7),(8),(9);
  }
  execsql {SELECT count(*) FROM c}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=TRUNCATE}
} {0 {}}

if {![sqlite_options journal_mode=TRUNCATE]} {
  set sqlite_options [sqlite_options -journal_mode=TRUNCATE]
}

do_test sync-1.4 {
  execsql {
    CREATE TABLE d(w);
    INSERT INTO d VALUES(10),(11),(12);
  }
  execsql {SELECT count(*) FROM d}
} {3}

finish_test