set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix sync

proc sync_proc {} {
  global syncargs
  lappend syncargs
  expr {[llength $syncargs] <= 2}
}

do_test sync-1.1 {
  execsql {
    CREATE TABLE a(x);
    INSERT INTO a VALUES(1),(2),(3);
  }
  execsql {SELECT count(*) FROM a}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=WAL}
} {0 {}}

do_test sync-1.2 {
  execsql {
    INSERT INTO a VALUES(4)
  }
  execsql {SELECT count(*) FROM a}
} {4}

do_test sync-1.3 {
  execsql {
    INSERT INTO a VALUES(5)
  }
  execsql {SELECT count(*) FROM a}
} {5}

ifcapable journalMode {
  do_test sync-1.4 {
    execsql {
      PRAGMA wal_checkpoint
    }
  } {}
  do_test sync-1.5 {
    execsql {
      SELECT x FROM a
    }
  } {1 2 3 4 5}
}

ifcapable {mutex_journal} {
  do_test sync-1.6 {
    execsql {
      PRAGMA journal_mode = DELETE
    }
  } {DELETE}
  do_test sync-1.7 {
    execsql {
      PRAGMA wal_checkpoint
    }
  } {}
}

finish_test