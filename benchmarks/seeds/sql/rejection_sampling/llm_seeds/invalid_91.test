set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix sync

proc sync_proc {} {
  global syncargs
  lappend syncargs
  expr {[llength $syncargs] <= 2}
}

do_test sync-1.1 {
  execsql {
    CREATE TABLE a(x);
    INSERT INTO a VALUES(1),(2),(3);
  }
  execsql {SELECT count(*) FROM a}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=WAL}
} {0 {}}

ifcapable {wal_mode} {
  do_test sync-1.2 {
    execsql {
      SELECT count(*) FROM a;
    }
  } {3}
  do_test sync-1.3 {
    execsql {
      DELETE FROM a;
      SELECT count(*) FROM a;
    }
  } {0}
  do_test sync-1.4 {
    execsql {
      INSERT INTO a VALUES(1);
      SELECT count(*) FROM a;
    }
  } {1}
  do_test sync-1.5 {
    execsql {
      SELECT count(*) FROM a;
    }
  } {1}
  do_test sync-1.6 {
    execsql {
      PRAGMA wal_checkpoint;
    }
  } {1}
  do_test sync-1.7 {
    execsql {
      SELECT count(*) FROM a;
    }
  } {1}
}

finish_test