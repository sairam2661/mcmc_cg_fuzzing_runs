set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix sync

proc sync_proc {} {
  global syncargs
  lappend syncargs
  expr {[llength $syncargs] <= 2}
}

do_test sync-1.1 {
  execsql {
    CREATE TABLE a(x);
    INSERT INTO a VALUES(1),(2),(3);
  }
  execsql {SELECT count(*) FROM a}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=WAL}
} {0 {}}

do_test sync-1.2 {
  execsql {
    CREATE TABLE b(y);
    INSERT INTO b VALUES(4),(5),(6);
  }
  execsql {SELECT count(*) FROM b}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=WAL}
} {0 {}}

do_test sync-1.3 {
  execsql {
    CREATE TABLE c(z);
    INSERT INTO c VALUES(7),(8),(9);
  }
  execsql {SELECT count(*) FROM c}
} {3}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode=WAL}
} {0 {}}

do_test sync-1.4 {
  execsql {
    SELECT x FROM a
    UNION ALL
    SELECT y FROM b
    UNION ALL
    SELECT z FROM c
  }
} {1 2 3 4 5 6 7 8 9}

do_test sync-1.5 {
  execsql {
    SELECT x FROM a
    UNION
    SELECT y FROM b
    UNION
    SELECT z FROM c
  }
} {1 2 3 4 5 6 7 8 9}

finish_test